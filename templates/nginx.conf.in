server {
    listen 80;
    server_name ${parts.conf.domainname};

    # AWstats
    include /etc/nginx/awstats.conf;


    location / {
      proxy_pass         http://127.0.0.1:${parts.conf.fastcgi};
      proxy_redirect     off;

      proxy_set_header   Host             $$host;
      proxy_set_header   X-Real-IP        $$remote_addr;
      proxy_set_header   X-Forwarded-For  $$proxy_add_x_forwarded_for;

      auth_basic "What... is your name? What... is your quest? What... is your favourite colour? ";
      auth_basic_user_file ${parts.buildout.directory}/.htpasswd;
    }

    access_log /var/log/nginx/${parts.conf.domainname}.access.log;
    error_log /var/log/nginx/${parts.conf.domainname}.error.log;
}
